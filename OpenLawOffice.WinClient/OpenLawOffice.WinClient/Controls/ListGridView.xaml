            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="&lt;" x:Name="Back" Click="Back_Click" />
            <Button Grid.Column="3" Content="&gt;" x:Name="Next" Click="Next_Click" />
        </Grid>-->
